<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgBackground"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/castOverlayFaderView"
        android:background="#99000000" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="360dp"
        android:id="@+id/imgCover"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Big Bang Theory"
        android:id="@+id/lblTitle"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:textSize="50sp"
        android:shadowRadius="5.0"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="5"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="52dp"
        android:layout_alignTop="@+id/imgCover"
        android:layout_toRightOf="@+id/imgCover"
        android:layout_toEndOf="@+id/imgCover"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The Anxiety Optimisation"
        android:id="@+id/lblSubtitle"
        android:textSize="30sp"
        android:shadowRadius="5.0"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="5"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/lblTitle"
        android:layout_alignLeft="@+id/lblTitle"
        android:layout_alignStart="@+id/lblTitle" />
</RelativeLayout>