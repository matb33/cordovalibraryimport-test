<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PlayerActivity" >

	<!-- 
		Views contained within the following RelativeLayout will  
		ignore the system ui views (status bar, navigation bar).
    -->
    <RelativeLayout
        android:id="@+id/fullScreenContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <SurfaceView
            android:id="@+id/videoSurfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fitsSystemWindows="false" />

        <RelativeLayout
            android:id="@+id/castMediaContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fitsSystemWindows="false"
            android:visibility="gone">
            <include
                layout="@layout/cast_media_layout"
                android:id="@+id/castMediaLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <com.nuvyyo.tabloplayer.captions.ClosedCaptionView
            android:id="@+id/closedCaptionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:fitsSystemWindows="false"
             />


        <RelativeLayout
            android:id="@+id/videoSurfaceDimmerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:fitsSystemWindows="false"
            android:background="#99000000"
            android:alpha="0.0">
            <ProgressBar
                android:id="@+id/spinner"
                style="@style/nvProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminate="true" />
        </RelativeLayout>
	</RelativeLayout>

    <!-- 
		Views contained within the following RelativeLayout will  
		exist within the system ui views (status bar, navigation bar).
    -->
    <include
        layout="@layout/inc_player_main_content"
        android:id="@+id/mainContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" />
</RelativeLayout>
