<?xml version="1.0" encoding="UTF-8"?>
<plugin
	xmlns="http://apache.org/cordova/ns/plugins/1.0"
	xmlns:android="http://schemas.android.com/apk/res/android"
	id="test-plugin"
	version="1">

	<name>Test Plugin</name>
	<description>Test Plugin</description>
	<js-module src="www/TabloVideoPlayer.js" name="TabloVideoPlayer">
        <clobbers target="TabloVideoPlayer" />
    </js-module>

	<engines>
		<engine name="cordova" version=">=4.0.2" />
	</engines>

	<platform name="android">
		<dependency id="com.nuvyyo.tabloplayer" url="file://../plugins-src/TabloPlayer" />

		<config-file target="res/xml/config.xml" parent="/*">
            <feature name="TabloVideoPlayer">
                <param name="android-package" value="com.nuvyyo.cordova.plugins.tablovideoplayer.TabloVideoPlayer"/>
            </feature>
        </config-file>


		<source-file src="TabloVideoPlayer.java" target-dir="src/com/nuvyyo/cordova/plugins/tablovideoplayer" />
		<source-file src="PlayerAPK.java" target-dir="src/com/nuvyyo/cordova/plugins/tablovideoplayer" />
	</platform>
</plugin>
